<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30h"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/fragment_home_edt_locat"
            android:layout_width="@dimen/dp180w"
            android:layout_height="@dimen/dp30h" />

        <ImageView
            android:id="@+id/fragment_home_iv_loc"
            android:layout_width="@dimen/dp50w"
            android:layout_height="@dimen/dp35h"
            android:src="@drawable/locat"
            android:padding="10dp"
            android:layout_marginLeft="@dimen/dp50w"/>

    </LinearLayout>


        <RelativeLayout
            android:layout_width="@dimen/dp300w"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20h"
            android:layout_marginLeft="@dimen/dp10w"
            android:alpha=".6"
          android:background="@color/black"
            android:id="@+id/fragment_home_iv_data">

            <TextView
                android:id="@+id/fragment_home_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textStyle="bold"
                android:textSize="@dimen/sp30"
                android:textColor="@color/white"
                android:padding="20dp"/>

            <TextView
                android:id="@+id/fragment_home_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20"
                android:layout_below="@id/fragment_home_tv_date"
                android:layout_marginStart="@dimen/dp30w"
                android:layout_marginLeft="@dimen/dp20w" />

            <TextView
                android:id="@+id/fragment_home_tv_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sp20"
                android:text="temp"
                android:layout_marginLeft="@dimen/dp200w"/>

            <TextView
                android:id="@+id/fragment_home_tv_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_home_tv_temp"
                android:layout_marginTop="@dimen/dp60h"
                android:layout_marginBottom="@dimen/dp10h"
                android:gravity="center_horizontal"
                android:text="max:"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20"
                android:layout_marginLeft="@dimen/dp70w"/>

            <TextView
                android:id="@+id/fragment_home_tv_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="min:"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20"
                android:layout_below="@id/fragment_home_tv_temp"
                android:layout_toRightOf="@id/fragment_home_tv_max"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp60h"
                android:layout_marginLeft="@dimen/dp50w"/>

            <TextView
                android:id="@+id/fragment_home_tv_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind:"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20"
                android:layout_below="@id/fragment_home_tv_max"
                android:layout_toRightOf="@id/fragment_home_tv_max"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp2h"
                android:layout_marginLeft="@dimen/dp10w"/>


        </RelativeLayout>

</LinearLayout>